{% extends "main.twig" %}

{% block content %}

	<h1>League teams</h1>

    {% for team in teams %}
	<div class="team">
		<object class="team-crest" data="{{ team.crestUrl|e }}" type="image/svg+xml"></object>
		<div class="team-info">
			<h2 class="team-name">
				{{ team.name|e }}
				<span class="team-market-value" title="Market value">{{ team.squadMarketValue|e }}</span>
			</h2>
		</div>
		<div class="team-favorite-toggle">
			<i class="fa fa-star-o"></i>
		</div>
	</div>
    {% endfor %}

{% endblock %}
