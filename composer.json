            "name": "Augusto Franzoia",
            "email": "ajfranzoia@gmail.com"
        }
    ],
    "require": {
        "symfony/http-foundation": "^3.2",
        "twig/twig": "~2.0",
        "guzzlehttp/guzzle": "^6.2",
        "php-activerecord/php-activerecord": "^1.1",
        "bocharsky-bw/arrayzy": "^0.6.1"
    },
    "require-dev": {
        "raveren/kint": "^1.0",
